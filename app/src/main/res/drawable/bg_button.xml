<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State: pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/success_pressed" /> <!-- warna saat button ditekan -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- State: normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/success_default" /> <!-- warna normal button -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>